extends ../layouts/default

mixin list(obj)
    ul.list
        each item in obj
            li.list__item
                a.list__link.right(href= item.href)= item.href
                .list__label= item.label

block head
    - title = 'Kursomir List'
    style.
        .list {
            margin: 0 auto;
            width: 50%;
            font-size: 16px;
        }

        .list__item {
            padding: 10px;
            border-radius: 5px;
            transition: background-color .3s ease
        }

        .list__item:hover {
            background-color: #f5f5f5;
        }

        .list__label {
            color: #333;
        }

        .list__link {
            color: #808080;
            font-weight: 300;
            border-bottom: 1px solid transparent;
            text-decoration: none;
            transition: all .3s ease;
        }

        .list__link:hover {
            color: #ed4e42;
            border-color: #ed4e42;
        }

block content-header
    .content-header
        .container
            h1 Список страниц

block content
    .content.container
        +list([
            {
                label: "Страница приветствия",
                href: "enter.html"
            },
            {
                label: "Список новостей",
                href: "news.html"
            },
            {
                label: "Новость с изображением",
                href: "news-with-img.html"
            },
            {
                label: "Новость без изображения",
                href: "news-without-img.html"
            }
        ])
